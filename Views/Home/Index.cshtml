                                <label class="form-check-label text-light" for="flexCheckDefault">
                                    Exclusive Offers
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                <label class="form-check-label text-light" for="flexCheckChecked">
                                    Events
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="all_blogs mt-4">
                        <div class="row">
                            <h4 class="fw-bold">Latest</h4>
                            <hr>
                            @if (Model.Latest_General != null)
                            {
                                foreach (var generalArticle in @Model.General_Articles)
                                {
                                    <div class="col-6 my-3">
                                        <div class="p-2 border-bottom box-shadow">
                                            <p class="text-primary-emphasis fw-bold">@generalArticle.Category.CategoryName.ToUpper()</p>
                                            <p class="fw-bold text-secondary fs-5">@generalArticle.Title</p>
                                            <div class="d-flex justify-content-between">
                                                <p class="author">@generalArticle.Author</p>
                                                <p class="timeString">@generalArticle.TimeString</p>
                                            </div>
                                            <img src="@generalArticle.Featured_Image_Url" class="w-100 h-auto" text="Image cap" />
                                            <div class="">
                                                <p class="fw-bolder text-secondary fs-6">@generalArticle.Description</p>
                                                <a class="btn btn-outline-secondary box-shadow" asp-controller="Article" asp-action="Index" asp-route-urlHandle="@generalArticle.Blog_Url">Read More</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

