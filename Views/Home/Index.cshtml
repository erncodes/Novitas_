@model HomeViewModel
@{
    ViewData["Title"] = "";
}

<div class="container-fluid bodycontainer" style="min-height:60vh">
    <div class="body_layout row">
        <div class="featured_blogs col-lg-9 col-md-9 col-sm-9 flex-lg-grow-1 flex-md-grow-1 flex-sm-grow-1">
            <div class="blogs row">
                <div class="blog_first_section col-lg-9 col-md-12">
                    @if (Model.Latest_Featured != null)
                    {
                        <div class="mb-3 mt-3 p-1 border-bottom box-shadow ">
                            <p class="text-primary-emphasis fw-bold category">@Model.Latest_Featured.Category.CategoryName.ToUpper()</p>
                            <p class="text-secondary fw-bolder fs-5">@Model.Latest_Featured.Title</p>
                            <div class="d-flex justify-content-between">
                                <p class="author">@Model.Latest_Featured.Author</p>
                                <p class="timeString">@Model.Latest_Featured.TimeString</p>
                            </div>
                            <img src="@Model.Latest_Featured.Featured_Image_Url" class="w-100 h-auto box-shadow" text="Image cap" />
                            <p class="text-secondary fw-bolder fs-6">@Model.Latest_Featured.Description</p>
                            <a class="btn btn-outline-secondary mb-1 box-shadow" asp-controller="Article" asp-action="Index" asp-route-urlHandle="@Model.Latest_Featured.Blog_Url">Read More</a>
                        </div>

                    }

                    <div class="four_featured">
                        <div class="row">
                            @if (Model.Featured_Articles != null)
                            {

                                foreach (var featured in Model.Featured_Articles)
                                {<div class="col-6 mb-3 border-bottom box-shadow">
                                        <p class="text-primary-emphasis fw-bold category">@featured.Category.CategoryName.ToUpper()</p>
                                        <p class="fw-bold title">@featured.Title</p>
                                        <div class="d-flex justify-content-between">
                                            <p class="author">@featured.Author</p>
                                            <p class="timeString">@featured.TimeString</p>
                                        </div>
                                        <div class="last_four">
                                            <img src="@featured.Featured_Image_Url" class="w-100 h-auto box-shadow" text="Image cap" />
                                            <a class="btn btn-outline-secondary my-2 box-shadow" asp-controller="Article" asp-action="Index" asp-route-urlHandle="@featured.Blog_Url">Read More</a>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="main_call_to_action row d-lg-none d-md-none d-sm-block mb-4">
                    <div class="main_call_1 col">
                        <p class="text-light fw-bolder">Subscribe To Our Channell 
                        <span class="text-primary">Novitas24</span></p>
                        <a class="btn btn-outline-primary" href="#footer">Subscribe</a>
                    </div>
                    <div class="main_call_2 col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label text-light" for="flexCheckDefault">
                                Newsletter
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                            <label class="form-check-label text-light" for="flexCheckChecked">
                                Email Marketing
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label text-light" for="flexCheckDefault">
                                Exclusive Offers
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                            <label class="form-check-label text-light" for="flexCheckChecked">
                                Events
                            </label>
                        </div>
                    </div>
                </div>
                <div class="blog_second_section col-lg-3 col-md-12 p-lg-3">
                    <div class="row">
                        <h5 class="fw-bold">Popular</h5>
                        <hr>
                        @if (Model.General_Articles != null)
                        {
                            foreach (var article in Model.General_Articles)
                            {
                                <div class="col-lg-12 col-md-6 mb-lg-2 border-bottom box-shadow">
                                    <div class="">
                                        <span class="text-primary-emphasis fw-bold category ">@article.Category.CategoryName.ToUpper()</span>
                                        <p class="title">@article.Title</p>
                                        <div class="d-flex justify-content-between">
                                            <p class="author">@article.Author</p>
                                            <p class="timeString">@article.TimeString</p>
                                        </div>
                                        <img src="@article.Featured_Image_Url" class="w-100 h-auto box-shadow" text="Image cap" />
                                        <a class="btn btn-outline-secondary my-2 box-shadow" asp-controller="Article" asp-action="Index" asp-route-urlHandle="@article.Blog_Url">Read More</a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="main_ col-12">
                    <div class="main_call_to_action row">
                        <div class="main_call_1 col">
                            <p class="text-light fw-bolder">Subscribe To Our Channell <span class="text-primary">Novitas24</span></p>
                            <a class="btn btn-outline-primary" href="#footer">Subscribe</a>
                        </div>

                        <div class="main_call_2 col">
